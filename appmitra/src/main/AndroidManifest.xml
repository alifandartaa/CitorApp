<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.citor.mitra">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CitorApp">
        <activity android:name=".ServiceActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".auth.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.login.OtpInputActivity" />
        <activity android:name=".auth.register.EmailConfirmActivity" />
        <activity android:name=".ServiceDetailActivity"/>
    </application>

</manifest>